<div id="messagebar-fixed">
  <div id="optionbar-fixed">
    <div class='buddy-status hide'></div>
    <div class='buddy-name'>
      <a href='#notification' style='color: #3366CC;'>Notifications</a>
    </div>
    <div class='buddy-options hide'>
      <button class='video btn btn-primary'>Video</button>
      <button class='remember btn btn-primary'></button>
    </div>
  </div>
  <div id='chat-app'>
    <div id="messagebar-box">

      <div id='message-scroll' style='width: 100%; height: 100%; overflow: hidden;' class="white">
        <div id="messagebar" class="tab-content">
          <!--<div class="tab-pane active">-->
          <!--</div>-->
        </div>
      </div>
    </div>
    <div id='chatbox-bottom'>
      <textarea id="chattypebox" class="chatbox" placeholder="Lets talk about?"></textarea>
      <input type="text" x-webkit-speech style="position: absolute;
              right: -10px;
              background: none;
              width: 17px;
              height: 20px;
              border: none;
              box-shadow: none;
              top: 47px;"/>
    </div>
  </div>
  <%= render 'shared/video' %>
</div>
