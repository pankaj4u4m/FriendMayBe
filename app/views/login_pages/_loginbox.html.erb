<div class="loginbox-fixed">
  <%= form_tag("/home", method: "get", id: "openid_form", class: "loginbtn") do %>
      <fieldset>
        <legend>Sign-in</legend>
        <div id="openid_choice" style="display: block;">
          <div id="openid_btns">
            <%= link_to "",  user_omniauth_authorize_path(:facebook),  class: "facebook openid_large_btn", title: "log in with Facebook"%>
            <%= link_to  "", user_omniauth_authorize_path(:google_oauth2), class: "google openid_large_btn", title: "log in with Google" %>
          </div>
        </div>
      </fieldset>
    <% end %>

  </div>